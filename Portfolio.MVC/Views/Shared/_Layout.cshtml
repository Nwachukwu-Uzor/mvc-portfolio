<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Uzor Nwachukwu</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
          integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/nav.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/footer.css" />
    <link rel="icon" type="image/png" sizes="32x32" href="~/favicon.ico">
</head>
<body>
    <header class="page-header">
        <div class="page-header__top">
            <div class='page-header__logo'>Uzor</div>
            <div class="page-header__toggle" onclick="toggleMenu()">☰</div>
        </div>
        <nav class="page-header__bottom">
            <ul id="navigation" class="navigation">
                <li class="navigation__item" ><a href="#home">Home</a></li>
                <li class="navigation__item"><a href="#about">About</a></li>
                <li class="navigation__item"><a href="#skills">Skills</a></li>
                <li class="navigation__item"><a href="#experience">Experience</a></li>
                <li class="navigation__item"><a href="#education">Education</a></li>
                <li class="navigation__item"><a href="#projects">Projects</a></li>
                <li class="navigation__item"><a href="#contact">Contact</a></li>
            </ul>
        </nav>
    </header>
    <div class="full">
        <main role="main" class="pb-3 full">
            @RenderBody()
        </main>
    </div>
    <footer class="footer">
        <div class="footer-left col-md-4 col-sm-6">
            <p class="about">
                <span> About Me</span> I am a fullstack software developer with experience working with HTML, CSS, 
                JavaScript, React/Redux, Materia-Ul, NodeJS/Express, MongoDB/Mongoose, SQL, C#, Asp.Net, and MVC architecture.
            </p>
            <div class="icons">
                <a href="https://www.facebook.com/uzor.nwachukwu.94" target="_blank"><i class="fa-brands fa-facebook"></i></a>
                <a href="https://twitter.com/nwachukwu_uzor?t=hMZBKPbC5gtcjdVpXtYviQ&s=09" target="_blank"><i class="fa-brands fa-twitter"></i></a>
                <a href="https://www.linkedin.com/in/uzor-nwachukwu-3467711a8" target="_blank"><i class="fa-brands fa-linkedin"></i></a>
            </div>
        </div>
        <div class="footer-center col-md-4 col-sm-6">
            <div>
                <i class="fa fa-map-marker"></i>
                <p>Lagos, Nigeria</p>
            </div>
            <div>
                <i class="fa fa-phone"></i>
                <p> (+234) 8064879196</p>
            </div>
            <div>
                <i class="fa fa-envelope"></i>
                <p>uzor1997@gmail.com</p>
            </div>
        </div>
        <div class="footer-right col-md-4 col-sm-6">
            <p class="menu">
                <a href="#home"> Home</a> |
                <a href="#about"> About</a> |
                <a href="#skills"> Skills</a> |
                <a href="#experience"> Education</a> |
                <a href="#projects"> Projects</a> |
                <a href="#contact"> Contact</a>
            </p>
            <p class="name"> Uzor Nwachukwu &copy; 2022</p>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/nav.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
